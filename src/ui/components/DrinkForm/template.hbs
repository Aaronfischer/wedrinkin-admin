<form class="ui form" onsubmit={{action @submit model}}>
  <div fluid="true" class="ui stackable two column grid">
    <div class="row">
      <div class="column">

        <FormField @error={{@errors.name}}>
          <label for="name">Drink Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            value={{name}}
            onchange={{action onChange}}
          />
        </FormField>

        <FormField @error={{@errors.img}}>
          <label for="img">Img/Icon</label>
          <input
            type="text"
            id="img"
            name="img"
            placeholder="Icon Code"
            value={{img}}
            onchange={{action onChange}}
          />
        </FormField>

        <FormField @error={{@errors.temp}}>
          <label for="temp">Temperature</label>
          <FieldDropdown
            @field="temp"
            @name="Temperature"
            @dropdownOptions={{tempOptions}}
            @value={{temp}}
            @onchange={{action onDropdownChange}} />
        </FormField>

        <FormField @error={{@errors.time}}>
          <label for="time">Time</label>
          <FieldDropdown
            @field="time"
            @name="Time"
            @dropdownOptions={{timeOptions}}
            @value={{time}}
            @onchange={{action onDropdownChange}} />
        </FormField>

        <FormField @error={{@errors.ingredients}}>
          <label for="ingredients">Ingredients</label>
          <FieldIngredients
            @field="ingredients"
            @name="Ingredients"
            @data={{ingredients}}
            @onchange={{action onIngredientsChange}}
            @onremove={{action onRemoveItem}}
            @onadd= {{action onAddItem}}
            @passAction={{action onRemoveItem}} />
        </FormField>

        <FormField @error={{@errors.quote}}>
          <label for="quote">Quote</label>
          <input
            type="text"
            id="quote"
            name="quote"
            placeholder="Quote"
            value={{quote}}
            onchange={{action onChange}}
          />
        </FormField>

        <FormField @error={{@errors.instructions}}>
          <label for="instructions">Instructions</label>
          <textarea
            id="instructions"
            name="instructions"
            placeholder="Instructions"
            value={{instructions}}
            onchange={{action onChange}}
          />
        </FormField>

      </div>
    </div>

    <div class="row">
      <div class="column">
        <div class="field">
          <button class="ui primary button" role="button">Save</button>
        </div>
      </div>
      {{#if @isEdit}}
        <div class="column">
          <div class="field">
            <ConfirmationAction
              @class="ui button"
              @passAction={{action @delete model}}>
                Delete
            </ConfirmationAction>
          </div>
        </div>
      {{/if}}
    </div>

  </div>
</form>
