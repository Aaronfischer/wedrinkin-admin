<div class="ui">
  <h1 class="ui header">Edit {{state.name}}</h1>
  <div class="ui segment">
    <DrinkForm
      @submit={{action onSubmit}}
      @delete={{action onDelete}}
      @data={{state}}
      @errors={{errors}}
      @isEdit=true
      @isLoading={{isLoading}}
      @isSuccess={{isSuccess}}
      @isFailure={{isFailure}} />
  </div>
</div>
